
#note:
#Please run  'chomd +x  ./xxx.sh' before running this script. 

#!/bin/bash

if [ ! "$1" ];then
	echo "must input port!";
	echo "like: sh server.sh 8080.";
	exit
fi


result=`netstat -tnlp | grep :$1 | grep nginx`;

nginxConfig=`pwd`/config/nginx.conf;
if [ ! "$result" ]; then
	echo "Start nginx!";
 	nginx -c $nginxConfig;
else
	echo "Restart nginx!";
 	nginx -s reload -c $nginxConfig;
fi

